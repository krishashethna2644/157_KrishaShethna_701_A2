<!DOCTYPE html>
<html>
<head>
  <title>Free API Utility</title>
  <style>
    body { font-family: Arial; margin: 40px; }
    .container { max-width: 600px; margin: 0 auto; }
    input, button { padding: 10px; margin: 5px; }
    .result { margin: 20px 0; padding: 15px; background: #f5f5f5; border-radius: 5px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>API Utility</h1>
    
    <h3>Weather (Backend API)</h3>
    <input type="text" id="city" placeholder="Enter city name">
    <button onclick="getWeather()">Get Weather</button>
    <div id="weather-result" class="result"></div>
    
    <h3>Random Quote (Frontend API)</h3>
    <button onclick="getQuote()">Get Quote</button>
    <div id="quote-result" class="result"></div>
    
    <h3>Cat Fact (Backend API)</h3>
    <button onclick="getCatFact()">Get Cat Fact</button>
    <div id="catfact-result" class="result"></div>
  </div>

  <script>
    // Backend API call
    async function getWeather() {
      const city = document.getElementById('city').value;
      if (!city) return;
      
      try {
        const response = await fetch(`/api/weather/${city}`);
        const data = await response.json();
        
        if (data.error) {
          document.getElementById('weather-result').innerHTML = `<p>Error: ${data.error}</p>`;
        } else {
          document.getElementById('weather-result').innerHTML = `
            <h4>${data.location}</h4>
            <p>Temperature: ${data.temperature}Â°C</p>
            <p>Description: ${data.description}</p>
            <p>Humidity: ${data.humidity}%</p>
          `;
        }
      } catch (error) {
        document.getElementById('weather-result').innerHTML = '<p>Error fetching weather</p>';
      }
    }
    
    // Frontend API call
    async function getQuote() {
      try {
        const response = await fetch('https://api.quotable.io/random');
        const data = await response.json();
        
        document.getElementById('quote-result').innerHTML = `
          <p>"${data.content}"</p>
          <p><strong>- ${data.author}</strong></p>
        `;
      } catch (error) {
        document.getElementById('quote-result').innerHTML = '<p>Error fetching quote</p>';
      }
    }
    
    // Backend API call for cat facts
    async function getCatFact() {
      try {
        const response = await fetch('/api/catfact');
        const data = await response.json();
        
        if (data.error) {
          document.getElementById('catfact-result').innerHTML = `<p>Error: ${data.error}</p>`;
        } else {
          document.getElementById('catfact-result').innerHTML = `<p>${data.fact}</p>`;
        }
      } catch (error) {
        document.getElementById('catfact-result').innerHTML = '<p>Error fetching cat fact</p>';
      }
    }
  </script>
</body>
</html>